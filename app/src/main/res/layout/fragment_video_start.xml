<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center"
    tools:context=".fragments.VideoStart">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/man_semi"
            android:text="Meeting ID"
            android:textColor="#545454"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/layout_bg">

            <EditText
                android:id="@+id/etMeetingID"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:ems="10"
                android:fontFamily="@font/man_semi"
                android:hint="Enter Meeting ID"
                android:inputType="textNoSuggestions|text"
                android:maxLines="1"
                android:paddingStart="10sp"
                android:paddingEnd="10sp"
                android:textColorHint="#9E9E9E"
                android:textSize="13sp"></EditText>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/man_semi"
            android:text="Meeting Name"
            android:textColor="#545454"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/layout_bg">

            <EditText
                android:id="@+id/etUserID"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:ems="10"
                android:fontFamily="@font/man_semi"
                android:hint="Enter your Name Here"
                android:inputType="textNoSuggestions|text"
                android:maxLines="1"
                android:paddingStart="10sp"
                android:paddingEnd="10sp"
                android:textColorHint="#9E9E9E"
                android:textSize="13sp"></EditText>

        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/man_reg"
            android:text="Meeting ID is only required if you will join a meeting"
            android:textColor="#545454"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_weight="1"
            android:id="@+id/lnStartCalling"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="35dp"
            android:background="@drawable/layout_bg"
            android:backgroundTint="#FCB44D"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:fontFamily="@font/man_semi"
                android:gravity="center"
                android:text="Join Meeting"
                android:textColor="@color/white" />


        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:id="@+id/lnCreateMeeting"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/layout_bg"
            android:backgroundTint="#FCB44D"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:fontFamily="@font/man_semi"
                android:gravity="center"
                android:text="Create Meeting"
                android:textColor="@color/white" />


        </LinearLayout>
    </LinearLayout>

</LinearLayout>